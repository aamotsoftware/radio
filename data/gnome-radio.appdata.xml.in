<?xml version="1.0" encoding="UTF-8"?>
<application>
  <id type="desktop">radio.desktop</id>
  <_name>GNOME Radio 48 for GNOME 48</_name>
  <_summary>Listen to National Public Radio on GNOME 48</_summary>
  <licence>CC0</licence>
  <description>
    <p>
      GNOME Radio 48 is a Free Software program that allows you easily
      listen to National Public Radio (NPR) broadcasts under GNOME 48.
    </p>
    <p>
      GNOME Radio 48 is developed on the GNOME 48 desktop platform and
      it requires GTK4, Clutter and GStreamer 1.0 for playback.
    </p>
    <p>    
    Enjoy National Public Radio (NPR) broadcasts under GNOME 48.
    </p>
  </description>
  <url type="homepage">https://wiki.gnome.org/Apps/Radio</url>
  <screenshots>
    <screenshot type="default">https://gitlab.gnome.org/ole/gnome-radio/-/blob/main/data/screenshots/gnome-radio-screenshot.png</screenshot>
  </screenshots>
  <updatecontact>girl-list@gnome.org</updatecontact>
</application>
