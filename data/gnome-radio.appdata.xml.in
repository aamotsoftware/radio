<?xml version="1.0" encoding="UTF-8"?>
<application>
  <id type="desktop">gnome-radio.desktop</id>
  <_name>Live Radio on GNOME</_name>
  <_summary>Listen to Live Radio on GNOME</_summary>
  <licence>CC0</licence>
  <description>
    <p>
      Radio 50.1 is a Free Software program that allows you easily
      listen to live National Public Radio broadcasts under GNOME.
    </p>
    <p>
      Radio 50.1 is developed on the GNOME desktop platform and
      it requires GTK4, Clutter and GStreamer 1.0 for playback.
    </p>
    <p>    
    Enjoy Live Radio broadcasts under GNOME.
    </p>
  </description>
  <url type="homepage">https://wiki.gnome.org/Apps/Radio</url>
  <screenshots>
    <screenshot type="default">https://www.gnomeradio.org/screenshot.png</screenshot>
  </screenshots>
  <updatecontact>ole@aamot.org</updatecontact>
</application>
